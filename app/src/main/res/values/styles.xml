<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/common_gray</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/main_color</item>
        <!--<item name="android:subtitleTextColor">@color/main_color</item>-->
        <item name="android:textSize">18sp</item>
        <!--<item name="android:titleTextColor">@color/main_color</item>-->
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="CommonItemTextAppearance" parent="@android:style/Widget.TextView">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
